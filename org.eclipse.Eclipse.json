{
	"app-id": "org.eclipse.Eclipse",
	"runtime": "org.gnome.Sdk",
	"runtime-version": "3.28",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": [
			"org.freedesktop.Sdk.Extension.openjdk9"
	],
	"command": "eclipse",
	"finish-args": [
		"--socket=x11",
		"--share=ipc",
		"--share=network",
		"--device=all",
		"--filesystem=~/workspace;~/.m2;~/.eclipse;/etc/hosts:ro;",
		"--env=PATH=/app/bin:/usr/bin:/app/jre/bin"
	],
	"cleanup": [
		"/COPYRIGHT",
		"/LICENSE",
		"/README",
		"/release",
		"/THIRDPARTYLICENSEREADME-JAVAFX.txt",
		"/THIRDPARTYLICENSEREADME.txt",
		"/Welcome.html",
		"/plugin",
		"/man",
		"/lib/applet",
		"/lib/desktop",
		"/eclipse/readme",
		"/eclipse/notice.html"
	],
	"modules": [
		{
			"name": "openjdk",
			"buildsystem": "simple",
			"build-commands": [
					"/usr/lib/sdk/openjdk9/install.sh"
			]
		},
		{
			"name": "eclipse",
			"no-autogen": true,
			"sources": [
				{
					"type": "archive",
					"url": "http://ftp-stud.fht-esslingen.de/pub/Mirrors/eclipse/technology/epp/downloads/release/oxygen/2/eclipse-jee-oxygen-2-linux-gtk-x86_64.tar.gz",
					"sha512": "f4cb8610200faca1658a78599cd695522ccbc16de3be1e6feda8e211fbd6e42437a581634c67c5dba2ef14ddbaf069af30418881f2eb012d883ff61bb64cd91e",
					"dest": "eclipse"
				},
				{
					"type": "file",
					"path": "Makefile",
					"dest-filename": "Makefile"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.png"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.desktop"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.appdata.xml"
				}
			]
		}
	]
}
