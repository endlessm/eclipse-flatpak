{
	"app-id": "org.eclipse.Eclipse",
	"runtime": "org.gnome.Sdk",
	"runtime-version": "3.28",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": [
			"org.freedesktop.Sdk.Extension.openjdk9"
	],
	"command": "eclipse",
	"finish-args": [
		"--socket=x11",
		"--share=ipc",
		"--share=network",
		"--device=all",
		"--filesystem=~/workspace;~/.m2;~/.eclipse;/etc/hosts:ro;",
		"--env=PATH=/app/bin:/usr/bin:/app/jre/bin"
	],
	"cleanup": [
		"/COPYRIGHT",
		"/LICENSE",
		"/README",
		"/release",
		"/THIRDPARTYLICENSEREADME-JAVAFX.txt",
		"/THIRDPARTYLICENSEREADME.txt",
		"/Welcome.html",
		"/plugin",
		"/man",
		"/lib/applet",
		"/lib/desktop",
		"/eclipse/readme",
		"/eclipse/notice.html"
	],
	"modules": [
		{
			"name": "openjdk",
			"buildsystem": "simple",
			"build-commands": [
					"/usr/lib/sdk/openjdk9/install.sh"
			]
		},
		{
			"name": "eclipse",
			"no-autogen": true,
			"sources": [
				{
					"type": "archive",
					"url": "http://www.mirrorservice.org/sites/download.eclipse.org/eclipseMirror/technology/epp/downloads/release/neon/1a/eclipse-java-neon-1a-linux-gtk-x86_64.tar.gz",
					"sha256": "cd22d953dee2db30d86c51a50189dd062c8ac68c5776cbe525a7f852986f23b5",
					"dest": "eclipse"
				},
				{
					"type": "file",
					"path": "Makefile",
					"dest-filename": "Makefile"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.png"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.desktop"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.appdata.xml"
				}
			]
		}
	]
}
